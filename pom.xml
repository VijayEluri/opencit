<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.openengsb.opencit</groupId>
  <artifactId>opencit-parent</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <name>OpenCIT :: Parent</name>

  <description>Continuous Integration Server based on the OpenEngsB</description>

  <properties>
    <org.osgi.service.http.port>8080</org.osgi.service.http.port>
    <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
    <openengsb.version>1.0.0-SNAPSHOT</openengsb.version>
  </properties>

  <packaging>pom</packaging>

  <modules>
    <module>poms</module>
    <module>provision</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.ops4j</groupId>
        <artifactId>maven-pax-plugin</artifactId>
        <version>1.4</version>
        <configuration>
          <provision>
            <param>--platform=felix</param>
            <param>--definitionURL=file:${settings.localRepository}/org/openengsb/openengsb/${openengsb.version}/openengsb-${openengsb.version}-platform.xml</param>
            <param>--console=false</param>
            <param>--vmOptions=-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005</param>
            <param>scan-composite:file:${settings.localRepository}/org/openengsb/openengsb/${openengsb.version}/openengsb-${openengsb.version}-karaf.composite</param>
            <param>scan-composite:file:${settings.localRepository}/org/openengsb/openengsb/${openengsb.version}/openengsb-${openengsb.version}-run.composite</param>
            <param>scan-pom:file:${settings.localRepository}/org/openengsb/build/provision/${openengsb.version}/provision-${openengsb.version}-provision.xml</param>
            <param>--ee=J2SE-1.6</param>
          </provision>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.openengsb</groupId>
      <artifactId>openengsb</artifactId>
      <version>${openengsb.version}</version>
      <classifier>platform</classifier>
      <type>xml</type>
    </dependency>
    <dependency>
      <groupId>org.openengsb</groupId>
      <artifactId>openengsb</artifactId>
      <version>${openengsb.version}</version>
      <classifier>karaf</classifier>
      <type>composite</type>
    </dependency>
    <dependency>
      <groupId>org.openengsb</groupId>
      <artifactId>openengsb</artifactId>
      <version>${openengsb.version}</version>
      <classifier>release</classifier>
      <type>composite</type>
    </dependency>
    <dependency>
      <groupId>org.openengsb</groupId>
      <artifactId>openengsb</artifactId>
      <version>${openengsb.version}</version>
      <classifier>run</classifier>
      <type>composite</type>
    </dependency>
    <dependency>
      <groupId>org.openengsb.build</groupId>
      <artifactId>provision</artifactId>
      <version>${openengsb.version}</version>
      <type>xml</type>
      <classifier>provision</classifier>
    </dependency>
  </dependencies>

  <distributionManagement>
    <snapshotRepository>
      <id>opencit-snapshots</id>
      <name>OpenEngSB Snapshot Repository</name>
      <url>dav:http://maven.openengsb.org/nexus/content/repositories/openengsb-snapshots/</url>
    </snapshotRepository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>openengsb-snapshots</id>
      <name>OpenEngSB Snapshots</name>
      <url>http://maven.openengsb.org/nexus/content/repositories/openengsb-snapshots/</url>
    </repository>
  </repositories>

</project>
